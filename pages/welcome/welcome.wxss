/* pages/welcome/welcome.wxss */
page {
  height: 100%;
  background: #b3d4db;
}
.container {
  height: 100%;
  padding: 300rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
}
.user-name {
  font-size: 32rpx;
  font-weight: bold;
}
.moto-container {
  width: 200rpx;
  height: 80rpx;
  border: 1rpx solid #405f80;
  border-radius: 5rpx;
  margin-top: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.moto {
  font-size: 22rpx;
  font-weight: bold;  
  color: #405f80;
}