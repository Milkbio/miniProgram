/* pages/posts/posts.wxss */
.swiper {
    width: 100%;
    height: 240px;
}
.swiper image {
    width: 100%;
}

.post-container {
    display: flex;
    flex-direction: column;
    margin: 20rpx 0 40rpx;
    padding-bottom: 10rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
}
.post-author-date {
    margin: 10rpx 0 20rpx 10rpx;
    display: flex;
    align-items: center;
}
.post-author {
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
}
.post-date {
    margin-left: 20rpx;
    font-size: 26rpx;
}
.post-title {
    font-weight: 600;
    font-size: 34rpx;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10rpx;
}
.post-image {
    width: 100%;
    vertical-align: top;
}
.post-content {
    font-size: 28rpx;
    color: #666;
    letter-spacing: 2rpx;
    padding: 20rpx;
}
.post-like {
    display: flex;
    align-items: center;
    font-size: 32rpx;
    margin-left: 20rpx;
    color: #666;
}
.post-like-image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
}
.post-like-font {
    margin-right: 40rpx;
}