<view>
    <swiper class="swiper" indicator-dots autoplay interval="2000">
        <swiper-item>
            <image src="/images/banner/1920x1080-1.jpg"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/banner/1920x1080-2.jpg"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/banner/1920x1080-3.jpg"></image>
        </swiper-item>
    </swiper>

    <view class="post-container" wx:for="{{list}}" wx:key="index" hidden="{{1 + 1 > 3}}">
        <view class="post-author-date">
            <image src="{{item.postAuthorUrl}}" class="post-author"></image>
            <text class="post-date">{{item.date}}</text>
        </view>
        <view class="post-title">
            <text>{{item.title}}</text>
        </view>
        <image src="{{item.postImg}}" class="post-image"></image>
        <text class="post-content">{{item.content}}</text>
        <view class="post-like">
            <image src="../../images/icon/icon-favor.png"  class="post-like-image"></image>
            <text class="post-like-font">{{item.viewNum}}</text>
            <image src="../../images/icon/icon-say.png"  class="post-like-image"></image>
            <text class="post-like-font">{{item.collectNum}}</text>
        </view>
    </view>
</view>
